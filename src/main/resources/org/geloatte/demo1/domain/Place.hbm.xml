<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.geolatte.demo1.domain.Place" table="places">

        <id name="id" column="id"/>

        <property name="name" column="name"/>
        <property name="geometry" type="org.hibernatespatial.GeometryUserType" column="geom" access="field">
        </property>
        
    </class>
</hibernate-mapping>